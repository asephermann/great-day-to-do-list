<resources>
    <!-- Base application theme. -->
    <style name="Theme.GreatDayToDoList" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_light_blue_A800</item>
        <item name="colorPrimaryVariant">@color/md_light_blue_A700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_blue_700</item>
        <item name="colorSecondaryVariant">@color/md_blue_800</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/md_light_blue_A800</item>
        <!-- Customize your theme here. -->
        <!-- Font-->
        <item name="android:fontFamily">@font/abel</item>
    </style>


    <style name="Theme.GreatDayToDoList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GreatDayToDoList.NoActionBar.WhiteStatusBar" parent="Theme.GreatDayToDoList.NoActionBar">
        <item name="android:statusBarColor">#FAFAFA</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.GreatDayToDoList.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GreatDayToDoList.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.GreatDayToDoList.NoActionBar.Fullscreen" parent="Theme.GreatDayToDoList.NoActionBar">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.GreatDayToDoList.NoActionBar.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.GreatDayToDoList.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>